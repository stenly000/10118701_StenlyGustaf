<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/bluesky1"
    android:paddingLeft="15dp">


    <TextView
        android:id="@+id/textSlogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/cormorant_light"
        android:text="@string/slogan"
        android:textColor="@color/lilac1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/textSlogan"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/jacques_francois"
        android:text="@string/logo"
        android:textColor="@color/lilac3"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/logo1"
        android:layout_above="@id/textLogo"
        android:layout_marginLeft="27dp"/>

</RelativeLayout>